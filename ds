
void Create_DeviceStatusPage()
{
	lv_ui*ui=Ui_GetInstance();

	ui->mpDeviceStatusPage=calloc(1,sizeof(ui_DeviceStatus));
	if(ui->mpDeviceStatusPage==NULL)
	{
		lv_log("%s\n","Failed to allocate ui->Device Status");
	}
	ui->mpDeviceStatusPage->mpPageWindowArea=CreatePageArea(ui->mpPageWindowArea);

	ui->mpDeviceStatusPage->mpLayoutTitleText = CreateLayout(ui->mpDeviceStatusPage->mpPageWindowArea, LV_ALIGN_CENTER, TITLE_X_Y_HEIGHT_WIDTH);

	lv_obj_align_to(ui->mpDeviceStatusPage->mpLayoutTitleText, ui->mpTopArea, LV_ALIGN_OUT_BOTTOM_MID, 0,0);

	LOG_CORD(ui->mpDeviceStatusPage->mpLayoutTitleText, ui->mpDeviceStatusPage->mpLayoutTitleText);

	ui->mpDeviceStatusPage->mpLabelDeviceStatus=CreateTitle(ui->mpDeviceStatusPage->mpLayoutTitleText,TR_TITLE_DEVICE_STATUS);
	lv_obj_set_style_text_font(ui->mpDeviceStatusPage->mpLabelDeviceStatus, &KR_FONT_24B, LV_PART_MAIN | LV_STATE_DEFAULT);

	if(ui->isStatusOK)
	{
		ui->mpDeviceStatusPage->mpLayouDeviceOKStatus = CreateLayout(ui->mpDeviceStatusPage->mpPageWindowArea,LV_ALIGN_CENTER,0,0,145,40);

		lv_obj_set_size(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, 145, 40); // ðŸ”¥ í¬ê¸° ì„¤ì •

		// ðŸ”¹ ë°°ê²½ ìŠ¤íƒ€ì¼ ì ìš© (ë‘¥ê·¼ ëª¨ì„œë¦¬)
		lv_obj_set_style_bg_color(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, lv_color_make(51,51,51), LV_PART_MAIN);
		lv_obj_set_style_radius(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, 50, LV_PART_MAIN); // ðŸ”¥ ë” ë‘¥ê¸€ê²Œ ì¡°ì • ê°€ëŠ¥
		lv_obj_set_style_bg_opa(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, LV_OPA_COVER, LV_PART_MAIN);
		lv_obj_set_style_border_width(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus,0, LV_PART_MAIN);
		

		// ðŸ”¹ ë°°ê²½ì„ ë’¤ë¡œ ë³´ë‚´ê¸°
		lv_obj_move_background(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus);

		lv_obj_set_flex_flow(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, LV_FLEX_FLOW_ROW);  // ðŸ”¥ ê°€ë¡œ ì •ë ¬ (ì•„ì´ì½˜ ì™¼ìª½, í…ìŠ¤íŠ¸ ì˜¤ë¥¸ìª½)
		lv_obj_set_flex_align(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, LV_FLEX_ALIGN_CENTER, LV_FLEX_ALIGN_CENTER, LV_FLEX_ALIGN_CENTER);


		extern const lv_img_dsc_t ic_status_check;		
		ui->mpDeviceStatusPage->mpImgStatusOK = CreateImage(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, &ic_status_check, LV_ALIGN_LEFT_MID, 0, 0);

		ui->mpDeviceStatusPage->mpLabelOKStatus=CreateOButtonLabel(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus,TR_DEVICE_WORKING_NORMALLY,LV_ALIGN_RIGHT_MID);
		lv_obj_set_style_text_align(ui->mpDeviceStatusPage->mpLabelOKStatus, LV_TEXT_ALIGN_LEFT, LV_PART_MAIN);
		// lv_obj_align_to(ui->mpDeviceStatusPage->mpLabelOKStatus, ui->mpDeviceStatusPage->mpImgStatusOK, LV_ALIGN_OUT_RIGHT_MID, 8,0);
	} 
