if(ui->isStatusOK)
{
    // 🔹 상태 표시용 레이아웃 생성 (둥근 배경)
    ui->mpDeviceStatusPage->mpLayouDeviceOKStatus = CreateLayout(ui->mpDeviceStatusPage->mpPageWindowArea,LV_ALIGN_CENTER,0,0,145,40);
    lv_obj_set_size(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, 145, 40); 

    // 🔹 배경 스타일 적용 (둥근 모서리)
    lv_obj_set_style_bg_color(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, lv_color_make(51,51,51), LV_PART_MAIN);
    lv_obj_set_style_radius(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, 20, LV_PART_MAIN); // 🔥 더 둥글게
    lv_obj_set_style_bg_opa(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus, LV_OPA_COVER, LV_PART_MAIN);
    lv_obj_set_style_border_width(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus,0, LV_PART_MAIN);

    // 🔹 배경을 뒤로 보내기
    lv_obj_move_background(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus);

    // 🔹 내부 요소 컨테이너 생성 (아이콘 & 텍스트 정렬을 위해)
    lv_obj_t *mpContent = lv_obj_create(ui->mpDeviceStatusPage->mpLayouDeviceOKStatus);
    lv_obj_set_size(mpContent, lv_pct(100), lv_pct(100)); // 🔥 부모 크기와 동일하게 설정
    lv_obj_set_flex_flow(mpContent, LV_FLEX_FLOW_ROW);  // 🔥 가로 정렬 (아이콘 왼쪽, 텍스트 오른쪽)
    lv_obj_set_flex_align(mpContent, LV_FLEX_ALIGN_START, LV_FLEX_ALIGN_CENTER, LV_FLEX_ALIGN_CENTER);
    lv_obj_set_style_bg_opa(mpContent, LV_OPA_TRANSP, LV_PART_MAIN); // 🔥 배경 투명하게
    lv_obj_set_style_pad_hor(mpContent, 10, LV_PART_MAIN); // 🔥 좌우 패딩 추가 (아이콘과 텍스트가 너무 붙지 않도록)

    // 🔹 아이콘 추가
    extern const lv_img_dsc_t ic_status_check;        
    ui->mpDeviceStatusPage->mpImgStatusOK = CreateImage(mpContent, &ic_status_check, LV_ALIGN_CENTER, 0, 0);
    lv_obj_set_flex_grow(ui->mpDeviceStatusPage->mpImgStatusOK, 0); // 🔥 아이콘이 자동으로 크기를 조절하지 않도록 설정

    // 🔹 텍스트 추가
    ui->mpDeviceStatusPage->mpLabelOKStatus=CreateOButtonLabel(mpContent, TR_DEVICE_WORKING_NORMALLY, LV_ALIGN_CENTER);
    lv_obj_set_style_text_align(ui->mpDeviceStatusPage->mpLabelOKStatus, LV_TEXT_ALIGN_LEFT, LV_PART_MAIN);
    lv_obj_set_flex_grow(ui->mpDeviceStatusPage->mpLabelOKStatus, 1); // 🔥 텍스트가 남은 공간을 차지하도록 설정
}
