    ui->mpNetWorkInfoPage->mpLayoutNetworkStatus = CreateLayout(ui->mpNetWorkInfoPage->mpPageWindowArea, LV_ALIGN_CENTER, 0, -15, 140, 40); // ðŸ”¥ í¬ê¸° ì¦ê°€

    // ðŸ”¹ ë‘¥ê·¼ ë°°ê²½ì„ ìœ„í•œ ì»¨í…Œì´ë„ˆ ìƒì„± (ë¶€ëª¨: mpLayoutNetworkStatus)
    ui->mpNetWorkInfoPage->mpBgRound = lv_obj_create(ui->mpNetWorkInfoPage->mpLayoutNetworkStatus);
    lv_obj_set_size(ui->mpNetWorkInfoPage->mpBgRound, 140, 40); // ðŸ”¥ í¬ê¸° ì„¤ì •
    lv_obj_align(ui->mpNetWorkInfoPage->mpBgRound, LV_ALIGN_CENTER, 0, 0); // ðŸ”¥ ì¤‘ì•™ ì •ë ¬

    // ðŸ”¹ ë‘¥ê·¼ ë°°ê²½ ìŠ¤íƒ€ì¼ ì ìš© (í…Œë‘ë¦¬ ì œê±°)
