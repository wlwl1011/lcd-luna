    lv_obj_set_style_radius(ui->mpNetWorkInfoPage->mpBgRound, 20, LV_PART_MAIN); // ðŸ”¥ ë” ë‘¥ê¸€ê²Œ (20px)
    lv_obj_set_style_bg_opa(ui->mpNetWorkInfoPage->mpBgRound, LV_OPA_COVER, LV_PART_MAIN);
    lv_obj_set_style_border_width(ui->mpNetWorkInfoPage->mpBgRound, 0, LV_PART_MAIN); // ðŸ”¥ í…Œë‘ë¦¬ ì œê±°

    // ðŸ”¹ ë°°ê²½ì„ ë’¤ë¡œ ë³´ë‚´ê¸°
